{
    "name": "Audio Analyser Extension",
    "version": "1.3",
    "manifest_version": 2,
    "description": "Analyzes the audio of the current tab and draws the audio frequencies on a canvas.",
    "permissions": [
        "storage",
        "tabCapture"
    ],
    "browser_action": {
        "default_icon": "./icon.png"
    },
    "background": {
        "scripts": [
            "./js/background.js"
        ],
        "persistent": true
    },
    "icons": {
        "128": "./icon.png"
    }
}